            const searchInput = document.getElementById("searchInput");
            const tableRows = document.querySelectorAll("tbody tr");

            searchInput.addEventListener("input", function () {
                const searchTerm = searchInput.value.toLowerCase();

                tableRows.forEach(row => {
                    const motoristaNome = row.querySelector("td:nth-child(1) div.text-sm.font-medium")?.textContent.toLowerCase() || "";
                    const motoristaEmail = row.querySelector("td:nth-child(1) div.ml-4")?.textContent.toLowerCase() || "";


                    if (motoristaNome.includes(searchTerm) || motoristaEmail.includes(searchTerm)) {
                        row.style.display = "";
                    } else {
                        row.style.display = "none";
                    }
                });
            });
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const datePicker = document.getElementById("datepicker");
            const backButton = document.getElementById("prev-week");
            const forwardButton = document.getElementById("next-week");
            const resetButton = document.getElementById("reset-week");
            const form = datePicker.closest("form");

            function formatDateString(date) {
                return date.toISOString().split("T")[0];
            }

            function getFriday(date) {
                const d = new Date(date);
                const day = d.getDay();
                const diff = d.getDate() + (5 - day);
                return new Date(d.setDate(diff));
            }

            const urlParams = new URLSearchParams(window.location.search);
            let selectedDate = urlParams.get("date") ? new Date(urlParams.get("date")) : getFriday(new Date());


            datePicker.value = formatDateString(selectedDate);

            function updateDate(days) {
                selectedDate.setDate(selectedDate.getDate() + days);
                datePicker.value = formatDateString(selectedDate);

                const newUrl = new URL(window.location);
                newUrl.searchParams.set("date", datePicker.value);
                window.history.pushState({}, "", newUrl);
                form.submit();
            }

            backButton.addEventListener("click", function () {
                updateDate(-7);
            });

            forwardButton.addEventListener("click", function () {
                updateDate(7);
            });

            resetButton.addEventListener("click", function () {
                datePicker.value = formatDateString(getFriday(new Date()));
                form.submit();
            });
        });
    </script>

